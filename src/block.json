{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "makeiteasy/popup",
	"version": "1.0.0",
	"title": "Makeiteasy Popup",
	"category": "widgets",
	"icon": "edit-page",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"textdomain": "makeiteasy-popup",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./makeiteasy-popup-helpers.js",
	"supports": {
		"color": {
			"background": true,
			"text": true
		},
		"align": true,
		"layout": {
			"default": {
				"type": "constrained"
			},
			"allowJustification": true
		},
		"anchor": true
	},
	"attributes": {
		"openType": {
			"enum": [
				"on timer",
				"on scroll",
				"on click",
				"on hover"
			],
			"default": "on scroll"
		},
		"openSelector": {
			"type": "string"
		},
		"openingTime": {
			"type": "string",
			"default": "5s"
		},
		"waitingAfterClosing": {
			"type": "string",
			"default": "-1s"
		},
		"layoutType": {
			"enum": [
				"floating",
				"static",
				"attached"
			],
			"default": "floating"
		},
		"modalityType": {
			"enum": [
				"modal",
				"modeless"
			],
			"default": "modal"
		},
		"relativeElement": {
			"type": "string"
		},
		"hasCloseButton": {
			"type": "boolean",
			"default": true
		},
		"enabled": {
			"type": "boolean",
			"default": true
		},
		"closeButtonColor": {
			"type": "string"
		}
	}
}
